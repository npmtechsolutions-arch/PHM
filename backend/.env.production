# ===================================================
# PharmaEC Backend - Production Environment Variables
# For Google Cloud Run Deployment
# ===================================================

# Database Configuration (Use Cloud SQL connection)
# Format: postgresql://user:password@/database?host=/cloudsql/PROJECT:REGION:INSTANCE
DATABASE_URL=postgresql://pharmaec:PASSWORD@/pharmaec?host=/cloudsql/YOUR_PROJECT:asia-south1:pharmaec-db

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production-must-be-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated production domains)
CORS_ORIGINS=https://your-frontend-domain.web.app,https://your-custom-domain.com

# Application Settings
DEBUG=False
ENVIRONMENT=production

# Cloud Run specific
PORT=8000

# Performance Settings
# Workers are configured in Dockerfile CMD, not here
# These can be used for app-level tuning
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
